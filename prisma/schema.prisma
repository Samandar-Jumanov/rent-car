model History {
   id     String @id @default(cuid())
   agentId  String
   agent   User  @relation(fields: [agentId ] , references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

